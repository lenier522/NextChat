<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo centrado -->
        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Logo NextChat"
            android:layout_marginBottom="16dp"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvAppName"
            style="@style/NextChat.AlertDialog.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NextChat"
            android:layout_marginBottom="4dp"/>

        <!-- Versión -->
        <TextView
            android:id="@+id/tvVersion"
            style="@style/NextChat.AlertDialog.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0.0"
            android:layout_marginBottom="12dp"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescription"
            style="@style/NextChat.AlertDialog.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensajería segura y privada basada en correo electrónico."
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginBottom="16dp"/>

        <!-- Info desarrollador -->
        <TextView
            android:id="@+id/tvDeveloper"
            style="@style/NextChat.AlertDialog.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollador: Lenier Cruz"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDeveloperEmail"
            style="@style/NextChat.AlertDialog.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leniercruz02@nauta.cu"
            android:layout_marginBottom="16dp"/>


        <CheckBox
            android:id="@+id/checkPol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Políticas de Privacidad y Condiciones de Uso" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar" />

        <!-- Copyright -->

        <TextView
            android:id="@+id/tvCopyright"
            style="@style/NextChat.AlertDialog.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Copyright"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
