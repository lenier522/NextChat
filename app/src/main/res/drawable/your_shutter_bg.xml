<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Color de fondo del botón de disparo -->
    <solid android:color="@android:color/white" />

    <!-- Borde ligero alrededor -->
    <stroke
        android:width="2dp"
        android:color="@color/gray" />

    <!-- Tamaño mínimo para mantener la forma circular -->
    <size
        android:width="56dp"
        android:height="56dp" />

    <!-- Opcional: efecto ripple al hacer click (API 21+) -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>
